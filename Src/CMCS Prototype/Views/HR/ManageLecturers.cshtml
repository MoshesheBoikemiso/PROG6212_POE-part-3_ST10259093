@model List<CMCS_Prototype.Models.User>
@{
    ViewData["Title"] = "Manage Lecturers";
}

<div class="container">
    <h2>Manage Lecturers</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (Model != null && Model.Any()) 
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Total Claims</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lecturer in Model)
                    {
                        <tr>
                            <td>@lecturer.FirstName @lecturer.LastName</td>
                            <td>@lecturer.Email</td>
                            <td>
                                <span class="badge bg-secondary">@lecturer.ClaimsSubmitted.Count</span>
                            </td>
                            <td>
                                <a href="@Url.Action("EditLecturer", "HR", new { id = lecturer.UserID })"
                                   class="btn btn-warning btn-sm">
                                    ✏️ Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>No lecturers found in the system.</p>
        </div>
    }

    <div class="mt-3">
        <a href="@Url.Action("HRDashboard", "HR")" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>