@model List<CMCS_Prototype.Models.Claim>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <h2>Welcome, @ViewBag.UserName! <small class="text-muted">(@ViewBag.UserRole)</small></h2>
    <p class="lead">Claims awaiting your action.</p>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Lecturer</th>
                        <th>Claim Month</th>
                        <th>Total Hours</th>
                        <th>Total Amount</th>
                        <th>Submission Date</th>
                        <th>Notes</th>
                        <th>Documents</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.User?.FirstName @claim.User?.LastName</td>
                            <td>@claim.ClaimMonth.ToString("MMMM yyyy")</td>
                            <td>@claim.TotalHours.ToString("N1")</td>
                            <td>R @claim.TotalAmount.ToString("N2")</td>
                            <td>@claim.DateSubmissions.ToString("dd MMM yyyy")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(claim.Notes))
                                {
                                    <span title="@claim.Notes">📝</span>
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </td>
                            <td>
                                @if (claim.Documents != null && claim.Documents.Any())
                                {
                                    <span class="badge bg-info">@claim.Documents.Count</span>
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </td>
                            <td>
                                <form method="post" action="@Url.Action("ApproveClaim", "Admin")" style="display: inline;">
                                    <input type="hidden" name="id" value="@claim.ClaimID" />
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                </form>
                                <form method="post" action="@Url.Action("RejectClaim", "Admin")" style="display: inline;">
                                    <input type="hidden" name="id" value="@claim.ClaimID" />
                                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>No pending claims at the moment. Well done! 🎉</p>
        </div>
    }

    <div class="mt-4">
        <a href="@Url.Action("Logout", "Home")" class="btn btn-secondary">Logout</a>
    </div>
</div>